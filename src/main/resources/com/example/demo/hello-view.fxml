<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox accessibleRole="TEXT" alignment="CENTER" spacing="50.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="200.0" left="200.0" right="200.0" top="200.0" />
    </padding>

    <Label fx:id="welcomeText" accessibleRole="CHECK_BOX" alignment="TOP_LEFT" text="Работа с базой SQLite" />
    <Button onAction="#onHelloButtonClick" text="Получить данные из базы" />
   <TableView fx:id="fxTable" editable="true" prefHeight="200.0" prefWidth="200.0" tableMenuButtonVisible="true">
     <columns>
       <TableColumn fx:id="fxColumn1" prefWidth="75.0" text="C1" />
       <TableColumn prefWidth="75.0" text="C2" />
     </columns>
   </TableView>
   <TextArea fx:id="tArea" prefHeight="200.0" prefWidth="200.0" text="Text" />
</VBox>
